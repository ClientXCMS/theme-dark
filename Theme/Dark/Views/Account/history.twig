{% extends "layout.twig" %}

{% block title trans("account.activity.title") %}

{% block styles %}
    {% include '@account/bullet.twig' %}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-body">
                        <div class="activities"  style="display:block;">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="preview-list">
                                            {% for row in logs %}

                                                <div class="preview-item border-bottom">
                                                    <div class="preview-thumbnail">
                                                        <div class="preview-icon bg-primary">
                                                            <i class="fas fa-sign-out-alt"></i>
                                                        </div>
                                                    </div>
                                                    <div class="preview-item-content d-sm-flex flex-grow">
                                                        <div class="flex-grow">
                                                            <h6 class="preview-subject">
                                                                {{ row.createdAt | ago }}
                                                            </h6>
                                                            <p class="text-muted mb-0">
                                                                {{ row.localization }}
                                                            </p>
                                                        </div>
                                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                                            <p class="text-muted">
                                                                {{ row.createdAt.format("h:m") }}
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                    {{ paginate(logs, 'account.activity') }}
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block scripts %}
        {{ ago_scripts() }}
        <script src="/Theme/assets/js/nav.js"></script>
    {% endblock %}
    