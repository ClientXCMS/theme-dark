{% block title trans("account.reset.title") %}
{% extends 'auth.twig' %}

{% block body %}
    <form action="{{ path('auth.password') }}" method="post">
        {% if flash('error') %}
            <div class="alert alert-danger">
                {{ flash('error') }}
            </div>
        {% endif %}

        {% if flash('success') %}
            <div class="alert alert-success">
                {{ flash('success') }}
            </div>
        {% endif %}

        {{ csrf_input() }}
        {{ field('email', null, trans("email"), {type: 'email'}) }}
        {{ recaptcha() }}

        <div class="col-12 col-sm-6">
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">
                    {{ trans("account.reset.button") }}
                </button>
            </div>
        </div>

        <a href="{{ path('account') }}"
           class="text-center text-primary float-right">{{ trans("admin.backtosite") }}
            <i class="fas fa-arrow-right"></i></a>
    </form>
{% endblock %}
