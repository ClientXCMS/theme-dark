{% extends "layout.twig" %}

{% block title trans("ordershow.order.title", {'%id%': order.id | strpad(5, 0)}) %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 col-sm-12">
				<div class="articles card">
					<div class="card-header d-flex align-items-center">
						<h2 class="h3">
							<i class="fa fa-cube"></i>
							{{ trans("ordershow.items.title")}}</h3>
					</div>
					<div class="card-body no-padding">
					{% if order.comment %}
						<p>{{order.comment }}</p>
					{% endif %}
					{{ order.state | order_status | trans | raw }}
					

						{% for i, item in order.transaction.items %}
							{% if item.delivred %}
								{% set date = item.delivredAt.format("d/m/y") %}
							{% endif %}

							{% if item.refunded %}
								{% set date = item.refundedAt.format("d/m/y") %}
							{% endif %}

							<div class="item d-flex align-items-center">
								<div class="image" style="margin: 5px"><img src="{{ theme_asset("img/service.png")}}" alt="..." class="img-fluid rounded-circle"></div>
								<div class="text">
									<a href="#">
										<h3 class="h5">{{ item.name }} x {{ item.quantity }}</h3>
									</a>
									<small>
											{% if order.state == constant('CANCELLED', order) %}
											{{ trans("return.Cancelled.state") }}
											{% else %}
											
										
										{% if item.delivred == '0' %}
											{{ trans("ordershow.items.pending")}}
										{% else %}
											{% if item.delivred %}
											{{ trans("ordershow.items.delivred", {"%date%": date})}}
											{% endif %}
											
											{% if item.refunded %}
											{{ trans("ordershow.items.refunded", {"%date%": date})}}
											{% endif %}
											{% endif %}
										
											

										{% endif %}
										<a class="stretched-link" data-toggle="collapse" href="#details-{{ i }}" role="button" aria-expanded="false" aria-controls="details-{{ i }}">{{ trans("details") }}</a>

									</small>


								</div>

							</div>
							</div>
							<div class="col">
								<div class="collapse multi-collapse" id="details-{{ i}}">
									<div class="card card-body">
									
									<table class="table table-bordered">
										<tbody>
											<tr>
												<td class="text-right">
													<strong>{{ trans("setupfee")}}</strong>
												</td>
												<td class="text-right" id="setupfee">{{ item.setupfee | formatted_price(true) }}
												{% if item.setupfee != item.originalSetupfee %}
													({{ item.originalSetupfee | formatted_price(true) }})
													{% endif %}
												</td>
													
											</tr>

											
											<tr>
												<td class="text-right">
													<strong>{{ trans("qty")}}</strong>
												</td>
												<td class="text-right" id="quantity">{{ item.quantity}} {{ trans("unit")}}
												</td>
													
											</tr>
											
											<tr>
												<td class="text-right">
													<strong>{{ trans("tax")}}</strong>
												</td>
												<td class="text-right" id="tax">{{ item.vat}} %
												</td>
													
											</tr>

											<tr>
												<td class="text-right">
													<strong>{{ trans("price") }}</strong>
												</td>
												<td class="text-right" id="price">{{ item.price | formatted_price(true)  }}</td>
												
											</tr>
											<tr>
												<td class="text-right">
													<strong>{{ trans("total") }}</strong>
												</td>
												<td class="text-right" id="total">{{ item.priceWithTax | formatted_price(true)  }}</td>
												
											</tr>
										</tbody>
									</table>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
		</div>
	{% endblock %}
